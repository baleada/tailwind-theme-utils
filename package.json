{
  "name": "@baleada/tailwind-theme-utils",
  "version": "0.7.0",
  "description": "Utility functions for Tailwind config files.",
  "type": "module",
  "main": "lib/index.cjs",
  "module": "lib/index.js",
  "exports": {
    "require": "./lib/index.cjs",
    "import": "./lib/index.js"
  },
  "scripts": {
    "prepare": "tsc && rollup --config rollup.config.ts",
