    "test": "npm run test:only ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/baleada/tailwind-theme-utils.git"
  },
  "homepage": "https://baleada.netlify.com",
  "keywords": [
    "baleada",
    "tailwind",
    "tailwind theme",
    "tailwind theme utils",
    "utility functions"
  ],
  "author": {
    "name": "Alex Vipond",
    "email": "hello@alexvipond.dev",
    "url": "https://alexvipond.dev"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/baleada/tailwind-theme-utils/issues"
  },
  "devDependencies": {
    "@baleada/prepare": "^0.5.16",
    "esbuild": "^0.14.11",
    "esbuild-register": "^3.3.1",
    "rollup": "^2.35.1",
    "tailwindcss": "^2.0.1-compat",
    "typescript": "^4.5.4",
    "uvu": "^0.5.3"
  },
  "dependencies": {
    "@babel/runtime": "^7.12.5",
    "@types/tailwindcss": "^3.0.2"
